{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "outDir": "./build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@src/*": ["src/*"]
    },
    "rootDir": "src"
  },
  "exclude": [
    "build",
    "configs",
    "dist",
    "node_modules",
    "scripts"
  ]
}
