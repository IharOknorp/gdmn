{
  "server": {
    "cluster": {
      "enabled": true,
      "workersCount": 0
    },
    "http": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    },
    "stomp": {
      "heartbeat": {
        "incoming": "30s",
        "outgoing": "30s"
      }
    },
    "publicDir": "./public",
    "session": {
      "timeout": "1d",
      "maxConnections": 10
    },
    "task": {
      "timeout": "1d"
    },
    "jwt": {
      "secret": "DefaultJWTSecret",
      "token": {
        "access": {
          "timeout": "3h"
        },
        "refresh": {
          "timeout": "7d"
        }
      }
    }
  },
  "db": {
    "server": {
      "host": "0.0.0.0",
      "port": 3050
    },
    "user": "SYSDBA",
    "password": "masterkey",
    "dir": "./databases",
    "pool": {
      "min": 0,
      "max": 1E3,
      "acquireTimeout": "60s",
      "idleTimeout": "60s"
    }
  }
}
